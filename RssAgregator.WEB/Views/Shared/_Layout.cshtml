<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
        @Styles.Render("~/Content/cssLibs")
        @Styles.Render("~/Content/css")

        @Scripts.Render("~/bundles/jquerry")
        @Scripts.Render("~/bundles/toastr")
        @Scripts.Render("~/bundles/angular")
        @Scripts.Render("~/bundles/ui-bootstrap")
        @Scripts.Render("~/bundles/soundmanagerv2")
        @Scripts.Render("~/bundles/videojs")
        @Scripts.Render("~/bundles/content-tools")

        @Scripts.Render("~/bundles/app")
    </head>
    <body ng-app="app" ng-cloak ng-class="{'invalid-data-on-page' : invalidDataOnPage}">
        @RenderBody()
    </body>
</html>
